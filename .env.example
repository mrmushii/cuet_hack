# Server Configuration
NODE_ENV=development
PORT=3000

# S3 Configuration
# For Docker: use http://delineate-minio:9000
# For local dev: use http://localhost:9000
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=downloads
S3_FORCE_PATH_STYLE=true

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Observability (optional)
# Sentry DSN for backend error tracking - get from https://sentry.io
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Rate Limiting
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS - Frontend URLs
# For development with frontend running on 5173/5174
# For Docker: use http://localhost:5173,http://localhost:5174
# For production: set to your actual frontend domain
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Download Delay Simulation (for long-running download demo)
DOWNLOAD_DELAY_ENABLED=true
DOWNLOAD_DELAY_MIN_MS=10000
DOWNLOAD_DELAY_MAX_MS=200000
